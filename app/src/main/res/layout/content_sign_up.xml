<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="27dp">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:text="@string/buat_akun"
        android:textAppearance="@style/title_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_welcome_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/mendaftar_untuk_memulai"
        android:textAppearance="@style/subtitle_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        tools:ignore="TextContrastCheck" />

    <RelativeLayout
        android:id="@+id/tf_name"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome_desc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="73dp">

        <View
            android:id="@+id/rect_tf_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rectangle_tf" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignStart="@id/rect_tf_name"
            android:layout_alignEnd="@id/rect_tf_name"
            android:layout_alignTop="@id/rect_tf_name"
            android:layout_alignBottom="@id/rect_tf_name"
            android:hint="@string/nama_lengkap"
            android:paddingHorizontal="16dp"
            android:paddingVertical="13dp"
            style="@style/label_regular"
            android:textColor="@color/gray70"
            android:background="@android:color/transparent"
            android:inputType="text" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tf_username"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        app:layout_constraintTop_toBottomOf="@id/tf_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="11dp">

        <View
            android:id="@+id/rect_tf_username"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rectangle_tf" />

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignStart="@id/rect_tf_username"
            android:layout_alignEnd="@id/rect_tf_username"
            android:layout_alignTop="@id/rect_tf_username"
            android:layout_alignBottom="@id/rect_tf_username"
            android:hint="@string/nama_pengguna"
            android:paddingHorizontal="16dp"
            android:paddingVertical="13dp"
            style="@style/label_regular"
            android:textColor="@color/gray70"
            android:background="@android:color/transparent"
            android:inputType="text" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tf_email"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        app:layout_constraintTop_toBottomOf="@id/tf_username"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="11dp">

        <View
            android:id="@+id/rect_tf_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rectangle_tf" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignStart="@id/rect_tf_email"
            android:layout_alignEnd="@id/rect_tf_email"
            android:layout_alignTop="@id/rect_tf_email"
            android:layout_alignBottom="@id/rect_tf_email"
            android:hint="@string/alamat_email"
            android:paddingHorizontal="16dp"
            android:paddingVertical="13dp"
            style="@style/label_regular"
            android:textColor="@color/gray70"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tf_password"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        app:layout_constraintTop_toBottomOf="@id/tf_email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="11dp">

        <View
            android:id="@+id/rect_tf_password"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rectangle_tf" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignStart="@id/rect_tf_password"
            android:layout_alignEnd="@id/rect_tf_password"
            android:layout_alignTop="@id/rect_tf_password"
            android:layout_alignBottom="@id/rect_tf_password"
            android:hint="@string/kata_sandi"
            android:paddingHorizontal="16dp"
            android:paddingVertical="13dp"
            style="@style/label_regular"
            android:textColor="@color/gray70"
            android:background="@android:color/transparent"
            android:inputType="textPassword" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tf_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        app:layout_constraintTop_toBottomOf="@id/tf_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="11dp">

        <View
            android:id="@+id/rect_tf_confirm_password"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rectangle_tf" />

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignStart="@id/rect_tf_confirm_password"
            android:layout_alignEnd="@id/rect_tf_confirm_password"
            android:layout_alignTop="@id/rect_tf_confirm_password"
            android:layout_alignBottom="@id/rect_tf_confirm_password"
            android:hint="@string/konfirmasi_kata_sandi"
            android:paddingHorizontal="16dp"
            android:paddingVertical="13dp"
            style="@style/label_regular"
            android:textColor="@color/gray70"
            android:background="@android:color/transparent"
            android:inputType="textPassword" />

    </RelativeLayout>

    <CheckBox
        android:id="@+id/cb_approval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tf_confirm_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"
        android:text="@string/saya_telah_membaca"
        android:textAppearance="@style/label_regular"
        android:textColor="@color/black"
        android:buttonTint="@color/orange"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/btn_sign_up"
        style="@style/label_medium"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button"
        android:text="@string/register"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_google_sign_up" />

    <LinearLayout
        android:id="@+id/btn_google_sign_up"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_outline"
        android:gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onGoogleSignUpClick" >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_google" />

        <TextView
            style="@style/label_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16.5dp"
            android:text="@string/daftar_dengan_google"
            android:textColor="@color/gray150"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>