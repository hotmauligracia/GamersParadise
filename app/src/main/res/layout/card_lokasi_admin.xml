<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:elevation="20dp"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <!--konten atas-->
            <LinearLayout
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!--wrap judul&waktu -->
                <LinearLayout
                    android:id="@+id/judul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <!--judul promo-->
                    <TextView
                        android:id="@+id/judul_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KEBAYORAN BARU"
                        style="@style/label_medium_prominent"
                        android:textColor="@color/black"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/title_card2"
                        style="@style/label_regular"
                        android:textColor="@color/gray_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Jl. KH. Ahmad Dahlan Kby. No.32, RT.3/RW.3, Kramat \nPela, Kec. Kby. Baru, Kota Jakarta Selatan, Daerah \n Khusus Ibukota Jakarta 12130"
                        app:layout_constraintStart_toEndOf="@id/title_card"/>




                </LinearLayout>

            </LinearLayout>


            <!--button-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content">

                <Button
                    android:id="@+id/btn_ubah"
                    style="@style/label_medium_prominent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_secondary"
                    android:text="Ubah"
                    android:textColor="@color/orange" />

                <Button
                    android:id="@+id/btn_hapus"
                    style="@style/label_medium_prominent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_secondary"
                    android:text="Hapus"
                    android:textColor="@color/orange" />


            </LinearLayout>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>