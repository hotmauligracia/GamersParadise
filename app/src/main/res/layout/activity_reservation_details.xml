<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.reservations.ReservationDetailsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_app_bar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="265dp"
            android:layout_height="20dp"
            android:layout_gravity="start"
            android:text="Detail Booking"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:letterSpacing="0.03" />

    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_app_bar"
        app:layout_constraintVertical_bias="0.0">

        <!-- Text "Hapus Barisan" -->
        <TextView
            android:id="@+id/hapusbarisan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="Hapus dari Barisan"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/dropdown_options" /> <!-- Menunjukkan array resource untuk pilihan dropdown -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="595dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/nobooking"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="No Booking"
            android:textColor="#868686"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book10007"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/nobooking"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:text="#10007"
            android:textColor="#868686"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/book10007"
            android:layout_marginTop="16dp"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:text="Tanggal"
            android:textColor="#868686"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/datebook"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tanggal"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:text="29-03-2024"
            android:textColor="#868686"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sesijam"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/datebook"
            android:layout_marginTop="16dp"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:text="Sesi Jam"
            android:textColor="#868686"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jambook"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:text="11.00 - 12.00"
            android:textColor="#868686"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/jambook"
            android:layout_marginTop="16dp"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:text="Nama"
            android:textColor="#868686"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Amalia"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:text="Amalia Balqis"
            android:textColor="#868686"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nomor"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:text="No. Telepon"
            android:textColor="#868686"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NoTelp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:lineSpacingExtra="15dp"
            android:text="081206661717"
            android:textColor="#868686"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pilihFasilitas"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:gravity="top"
            android:lineSpacingExtra="5sp"
            android:text="Fasilitas yang Dipilih"
            android:textColor="#868686"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/frame_10001"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_shape">

            <ImageView
                android:id="@+id/gambarvip1"
                android:layout_width="108dp"
                android:layout_height="94dp"
                android:src="@drawable/gambarvip"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/ruangvip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/gambarvip1"
                android:gravity="top"
                android:letterSpacing="0.01"
                android:text="VIP1"
                android:layout_marginTop="5dp"
                android:textColor="#868686"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/personvip"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_below="@+id/ruangvip"
                android:layout_toEndOf="@+id/gambarvip1"
                android:src="@drawable/ic_person" />

            <TextView
                android:id="@+id/orang6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/ruangvip"
                android:layout_toEndOf="@+id/personvip"
                android:text="6 0rang"
                android:textColor="#868686"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/devicevip1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_below="@+id/personvip"
                android:layout_toEndOf="@+id/gambarvip1"
                android:src="@drawable/ic_devices" />

            <TextView
                android:id="@+id/devices"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/orang6"
                android:layout_toEndOf="@+id/devicevip1"
                android:text="PS5, Nintendo Switch, Netflix"
                android:textColor="#868686"
                android:textSize="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttonhapus">

            <TextView
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button"
                android:textAppearance="@style/delete_list"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerInParent="true" />

        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>