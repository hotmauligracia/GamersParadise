<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginEnd="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="139dp"
        android:layout_height="162dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_facility_cardview"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/img_room1"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/white_background"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="3dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_person"/>

                <TextView
                    android:id="@+id/tv_facility_capacity_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1"
                    style="@style/label_small"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_facility_cardview"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_facility_name_cardview"
                    style="@style/label_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pc_gaming_arena"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_facility_price_cardview"
                    style="@style/label_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rp15_000_jam"
                    android:textColor="@color/orange" />

            </LinearLayout>
        </RelativeLayout>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>