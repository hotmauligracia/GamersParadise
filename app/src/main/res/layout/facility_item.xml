<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/facilities_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/card_list">

    <ImageView
        android:id="@+id/img_facilities"
        android:layout_width="108dp"
        android:layout_height="94dp"
        app:layout_constraintTop_toTopOf="@id/facilities_list_item"
        app:layout_constraintStart_toStartOf="@id/facilities_list_item"
        android:scaleType="centerCrop"
        android:src="@drawable/img_room1" />

    <TextView
        android:id="@+id/tv_facilities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/facilities_list_item"
        app:layout_constraintStart_toEndOf="@id/img_facilities"
        android:layout_marginStart="8dp"
        android:text="@string/pc_gaming_arena"
        android:textAppearance="@style/label_large_prominent"
        android:textColor="@color/black"
        android:lineSpacingExtra="2sp"
        android:maxLines="1" />

    <TableLayout
        android:id="@+id/tbl_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_facilities"
        app:layout_constraintStart_toEndOf="@id/img_facilities"
        android:layout_marginStart="8dp">

        <TableRow
            android:id="@+id/tr_person"
            android:layout_width="127dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_person"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_person"
                app:tint="@color/gray_normal" />

            <TextView
                android:id="@+id/tv_person"
                style="@style/label_small"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:lineSpacingExtra="1sp"
                android:maxLines="1"
                android:text="@string/_1_orang"
                android:textColor="@color/gray_normal"
                tools:ignore="TextContrastCheck" />

        </TableRow>

        <TableRow
            android:id="@+id/tr_devices"
            android:layout_width="127dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_devices"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_devices"
                app:tint="@color/gray_normal" />

            <TextView
                android:id="@+id/tv_devices"
                style="@style/label_small"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:lineSpacingExtra="1sp"
                android:maxLines="2"
                android:text="@string/monitor_keyboard_mouse_headset"
                android:textColor="@color/gray_normal"
                tools:ignore="TextContrastCheck,TextSizeCheck" />

        </TableRow>
    </TableLayout>

    <TextView
        style="@style/label_large_prominent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rp15_000_jam"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toBottomOf="@id/facilities_list_item"
        app:layout_constraintEnd_toEndOf="@id/facilities_list_item"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>