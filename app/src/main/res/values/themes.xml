<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GamersParadise" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <!-- Font Style -->
    <style name="title_login">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="subtitle_login">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray70</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="title_medium">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="label_large_prominent">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="label_regular">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="label_small">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="label_medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="body_medium">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="body_small">
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Components -->
    <style name="text_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:background">@drawable/rectangle_tf</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textAppearance">@style/label_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_outline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:textAppearance">@style/label_medium</item>
        <item name="android:textColor">@color/gray150</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="secondary_button">
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:textAppearance">@style/label_medium</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="safe_area">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

</resources>